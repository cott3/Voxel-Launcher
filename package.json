{
  "name": "voxel-launcher",
  "version": "1.0.0",
  "description": "A custom launcher for Minecraft (not affiliated with Mojang)",
  "main": "main.js",
  "author": "Relas",
  "license": "MIT",

  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },

  "dependencies": {
    "axios": "^1.6.3"
  },

  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^26.4.0"
  },

  "build": {
    "appId": "com.relas.voxel.launcher",
    "productName": "Voxel Launcher",
    "copyright": "Copyright Â© 2026 Relas",

    "directories": {
      "buildResources": "build"
    },

    "files": [
      "**/*"
    ],

    "asar": true,

    "win": {
      "target": "nsis",
      "icon": "build/Stone-Block.ico",
      "signAndEditExecutable": false
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
